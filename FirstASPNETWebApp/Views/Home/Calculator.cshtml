@{
    ViewBag.Title = "Tutoring Cost Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tutoring Cost Calculator</h1>

<form>
    <label for="hours">Enter Hours Needed:</label>
    <input type="number" id="hours" min="1" required>
    <br>
    <label for="rate">Hourly Rate:</label>
    <input type="text" id="rate" value="20" readonly>
    <br>
    <button type="button" id="calculateButton">Calculate Total</button>
    <br>
    <label for="total">Total Cost:</label>
    <input type="text" id="total" readonly>
</form>

<nav>
    <a href="@Url.Action("Index", "Home")">Back to Home</a>
</nav>

<!-- Ensure jQuery is loaded (if not already included in your layout) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Reference the external JS file -->
<script src="~/js/site.js"></script>
